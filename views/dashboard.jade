      // END: LAYOUT/BREADCRUMBS/BREADCRUMBS-2
      .container
        .c-layout-sidebar-menu.c-theme
          // BEGIN: LAYOUT/SIDEBARS/SHOP-SIDEBAR-DASHBOARD
          .c-sidebar-menu-toggler
            h3.c-title.c-font-uppercase.c-font-bold My Profile
            a.c-content-toggler(href='javascript:;', data-toggle='collapse', data-target='#sidebar-menu-1')
              span.c-line
              span.c-line
              span.c-line
          ul#sidebar-menu-1.c-sidebar-menu.collapse
            li.c-dropdown.c-open
              a.c-toggler(href='javascript:;')
                | Mi Perfil
                span.c-arrow
              ul.c-dropdown-menu

                li#view_my_profile.c-active
                  a(href='javascript:;') Mis Datos
                li#view_my_address
                  a(href='javascript:;') Libreta de direcciones
                li
                  a(href='javascript:;') Tarjetas
                li
                  a(href='javascript:;') Pedidos recientes
                li
                  a(href='javascript:;') Favoritos
          // END: LAYOUT/SIDEBARS/SHOP-SIDEBAR-DASHBOARD
        .c-layout-sidebar-content
          // BEGIN: PAGE CONTENT
          // BEGIN: CONTENT/SHOPS/SHOP-CUSTOMER-DASHBOARD-1
          #my_profile_section
            .c-content-title-1
              h3.c-font-uppercase.c-font-bold Mis Datos
              .c-line-left
              #my_profile
                .row
                  .col-md-12.col-sm-12.col-xs-12.c-margin-b-20
                    .table-responsive
                      table.table
                        tbody
                          tr
                            td Nombre:
                            td#lbl_user_name=user.name
                          tr
                            td Apellidos:
                            td#lbl_user_lasname=user.lastname
                          tr
                            td Email:
                            td#lbl_user_mail=user.mail
                          tr
                            td Teléfono:
                            td#lbl_user_phone=user.phone
                          tr
                            td Contraseña:
                            td *********
                          tr 
                            td Comunicación:
                            td Haz clic en "MODIFICAR" para cambiar las preferencias de comunicación
                    p
                      button#btn_update_my_profile.btn.btn-primary.btn-xs(type='button') MODIFICAR
              #edit_my_profile(style='display:none;')
                .row
                  .col-md-12.col-sm-12.col-xs-12.c-margin-b-20
                    form.c-form-register.c-margin-t-20(style='display: block;')
                      .form-group
                        label.control-label Usuario
                        input#input_username.form-control.c-square.c-theme(type='text', placeholder='Usuario')

                      .form-group
                        label.control-label País
                        select#input_country.form-control.c-square.c-theme
                          option(value='Peru') Perú
                      .form-group
                        label.control-label Departamento / Ciudad
                        input#input_city.form-control.c-square.c-theme(type='text', placeholder='Departamento / Ciudad')
                      .form-group
                        .row
                          .col-md-6
                            label.control-label Nombres
                            input#input_name.form-control.c-square.c-theme(type='text', placeholder='Nombres')
                          .col-md-6
                            label.control-label Apellidos
                            input#input_lastname.form-control.c-square.c-theme(type='text', placeholder='Apellidos')
                      .form-group
                        label.control-label Dirección
                        input#input_address.form-control.c-square.c-theme(type='text', placeholder='Ca. Principal 150')
                      .form-group
                        input#input_address_optional.form-control.c-square.c-theme(type='text', placeholder='Departamente 503, 5to piso (opcional)')
                      .row
                        .form-group.col-md-6
                          label.control-label Email
                          input#input_mail.form-control.c-square.c-theme(type='email', placeholder='Email Address')
                        .col-md-6
                          label.control-label Teléfono
                          input#input_phone.form-control.c-square.c-theme(type='tel', placeholder='Phone')
                      
                      .form-group.c-margin-t-40
                        .alert.alert-danger(style='display:none;', role='alert') Uy! Es necesario que llene los datos obligatorios.
                        .alert.alert-warning(style='display:none;', role='alert') Oh! La dirección de correo ya se encuentra registrada.
                        .alert.alert-success(style='display:none;', role='alert') ¡Listo! Tu cuenta ha sido actualizada correctamente.
                      p
                        button#btn_update_profile.btn.btn-primary.btn-xs(type='button') ACTUALIZAR
            
          #my_address_section(style='display:none;')
            .c-content-title-1
              h3.c-font-uppercase.c-font-bold Libreta de direcciones
              input#input_shipping_selected(type='hidden')
              .c-line-left
              #my_address
                .row
                  .col-md-12.col-sm-12.col-xs-12.c-margin-b-20
                    p
                      button#btn_add_new_address.btn.btn-primary.btn-xs(type='button') AÑADIR
                    .alert.alert-warning.address(style='display:none;', role='alert') Aún no defines direcciones de entrega.
                    .table-responsive
                      table.table
                        tbody#tbody_shipping_address
                    //#summernote 
              #edit_add_update_address(style='display:none;')
                .row
                  .col-md-12.col-sm-12.col-xs-12.c-margin-b-20
                    form.c-form-register.c-margin-t-20(style='display: block;')
                      .form-group
                        label.control-label Nombre (*)
                        input#input_address_receiver_name.form-control.c-square.c-theme(type='text', placeholder='')
                      .form-group
                        label.control-label Apellidos (*)
